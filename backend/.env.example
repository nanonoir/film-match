# Database - PostgreSQL en Render
# Para desarrollo local: postgresql://user:password@localhost:5432/film_match
# Para Render: Copia la Internal Database URL desde el dashboard de Render
# Formato: postgresql://username:password@host:5432/database
DATABASE_URL="postgresql://user:password@localhost:5432/film_match"

# JWT Secrets (mínimo 32 caracteres)
JWT_SECRET=""
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET=""
JWT_REFRESH_EXPIRES_IN="30d"

# API Keys Externas
TMDB_API_KEY=""
GEMINI_API_KEY=""
PINECONE_API_KEY=""
PINECONE_ENVIRONMENT=""
PINECONE_INDEX="film-match"

# App Configuration
NODE_ENV="development"
PORT="3001"
# Para desarrollo local: http://localhost:5173
# Para producción en Vercel: https://tu-dominio.vercel.app
FRONTEND_URL="http://localhost:5173"

# Google OAuth (opcional en desarrollo)
# Set to 'false' to disable Google Auth
GOOGLE_AUTH_ENABLED="false"
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:3001/api/auth/google/callback"
