{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["config/*"],
      "@features/*": ["features/*"],
      "@presentation/*": ["presentation/*"],
      "@shared/*": ["shared/*"],
      "@assets/*": ["assets/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src", "App.tsx", "src/types/**/*.d.ts"]
}
